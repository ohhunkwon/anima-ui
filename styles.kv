BoxLayout:
    orientation: "vertical"

    MDToolbar:
        title: "ANIMA"
        md_bg_color: .2, .2, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "clone voice"
            text: "record voice"
            icon: "headset"

            MDLabel:
                text: "Say the sentence below"
                text_size: self.size
                valign: "top"
                halign: "center"
                padding: (300, 100)
            MDLabel:
                text: f'{"Its easy to tell the depth of a well."}'
                text_size: self.size
                valign: "top"
                halign: "center"
                padding: (300, 300)
                font_size: 60
            ToggleButton:
                text: "Start Recording"
                font_size: "20sp"
                background_color: (1, 1, 1, 1)
                background_normal: 'normal.png'
                background_down: 'down.png'
                border: 30,30,30,30
                color: (1, 1, 1, 1)
                size: (32, 32)
                size_hint: (.2, .2)
                pos: (630, 250)
                on_state:
                    self.text = "Start Recording" if self.state == "normal" else "Recording..."
                    self.color = (1, 1, 1, 1) if self.state == "normal" else (0, 0, 0, 1)

        MDBottomNavigationItem:
            name: "read text"
            text: "read out"
            icon: "view-headline"

            MDLabel:
                text: "read text..."
                halign: "center"

        MDBottomNavigationItem:
            name: "setting"
            text: "settings"
            icon: "dns"

            MDLabel:
                text: "settings page..."
                halign: "center"
